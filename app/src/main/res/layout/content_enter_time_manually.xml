<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EnterTimeManually"
    tools:showIn="@layout/activity_enter_time_manually">

    <EditText
        android:id="@+id/enter_time_manually_hour"
        android:layout_width="101dp"
        android:layout_height="62dp"
        android:layout_marginStart="100dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enter_time_manually_min"
        android:layout_width="101dp"
        android:layout_height="62dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/enter_time_manually_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enter_time_manually_hour"
        app:layout_constraintTop_toTopOf="@+id/enter_time_manually_hour"
        app:layout_constraintVertical_bias="0.484" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round"
        android:backgroundTint="#F2FFFFFF"
        android:onClick="onClickSave"
        android:text="Add"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="@+id/enter_time_manually_min"
        app:layout_constraintStart_toStartOf="@+id/enter_time_manually_hour"
        app:layout_constraintTop_toBottomOf="@+id/enter_time_manually_min" />

    <TextView
        android:id="@+id/enter_time_manually_label_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hours"
        android:textColor="#959191"
        app:layout_constraintBottom_toTopOf="@+id/enter_time_manually_hour"
        app:layout_constraintEnd_toEndOf="@+id/enter_time_manually_hour"
        app:layout_constraintStart_toStartOf="@+id/enter_time_manually_hour" />

    <TextView
        android:id="@+id/enter_time_manually_label_minutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Minutes"
        android:textColor="#959191"
        app:layout_constraintBottom_toTopOf="@+id/enter_time_manually_min"
        app:layout_constraintEnd_toEndOf="@+id/enter_time_manually_min"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/enter_time_manually_hour" />

    <View
        android:id="@+id/saveBtn12"
        android:layout_width="650dp"
        android:layout_height="650dp"
        android:background="@drawable/round"
        android:backgroundTint="#1EFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>